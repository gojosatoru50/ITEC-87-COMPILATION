body {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
  background: url('rickandmorty.gif') no-repeat center center fixed;
  background-size: cover;
  background-color: #f0f0f0;
  font-size: 1.3em;
  color: #fffdf7;
}

.container {
  text-align: center;
}

.shadow__btn {
  padding: 10px 20px;
  border: none;
  font-size: 18px;
  color: #fff;
  border-radius: 9px;
  letter-spacing: 4px;
  font-weight: 700;
  text-transform: uppercase;
  transition: 0.5s;
  transition-property: box-shadow;
  background: rgb(0,255,0); /* Bright green color */
  box-shadow: 0 0 25px rgb(0,255,0);
  letter-spacing: 0.1.5em;
}

.shadow__btn:hover {
  box-shadow: 0 0 5px rgb(0,255,0),
              0 0 25px rgb(0,255,0),
              0 0 50px rgb(0,255,0),
              0 0 100px rgb(0,255,0);
}
