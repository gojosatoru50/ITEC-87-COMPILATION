body {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
	background-color: #f4f4f4;
}

header {
			font-family: 'Arial', sans-serif;
            background-color: #161a1d;
            color: white;
            text-align: center;
            padding: 28px;
			margin-bottom:20px;
			position:fixed;
			
        }
	
	.home-section p {
	padding-top:0;
	font-size: 20px;
	color: #0c0f0a;
	padding-left: 200px;
    padding-right: 200px;
	margin-bottom: -180px;
	
}
.home-content {
	padding-top:0px;
	font-size: 30px;
	color: #0c0f0a;
}

.profile {
    margin-bottom: 20px;
	padding-top: 40px;
  }

.profile img {
    width: 600px;
    height: 450px;
    border-radius: 10%;
    margin-bottom: 10px;
	}
	
}

.header:hover {
    background: rgba(0, 0, 0, 0.9); /* Darker background on hover */
}
	
	/* Navigation Bar*/
	
nav ul {
    list-style: none;
    margin: 0;
    padding: 10px;
    display: flex;
	text-align: center;
}

nav ul li {
	z-index: 1000;
    margin-right: 5px; /* Reduced margin */
	margin-left: 5px;
	padding-left: 49px;
    padding-right: 49px;
	text-align: center;
	margin: 0 15px;
	
}

nav a {
    text-decoration: none;
    color: #fff;
    font-size: 16; /* Reduced font size */
	padding: 10px 10px;
	border-radius: 5px;
	transition: background-color 0.3s;
	
}

nav a:hover {
    background-color: #0c0f0a;
}

/* End Navigation Bar*/



.hero {
    background-image: url('images/restaurant-interior.jpg');
    background-size: cover;
    color: #000000;
    text-align: center;
    padding: 100px 0;
}

section {
    padding: 50px 0;
	text-align: center;
}

.bg-light {
    background-color: #f9f9f9;
}

.dess-content {
	padding-top:230px;
	font-size: 30px;
	color: #0c0f0a;
	margin-top: 0px;
	justify-content: center;
}

.dess-section{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: -150px;
}

.dishe-list {
  list-style-type: none; 
  padding: 0;
  margin: 0;
}

.dishe {
  display: flex;
  align-items: center;
  width: 90%;
  margin-bottom: 20px;
  background-color: #99d98c;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-top: 40px;
  justify-content: center;
  margin-left: 75px;
  margin-right: 25px;
}

.dishe img {
  width: 400px;
  height: 300px;
  object-fit: cover;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
}

.dishe-info {
  padding: 20px;
}

.dishe-info h2 {
  margin-top: 0;
  color: #0b090a;
}

.dishe-info p {
  font-size: 18px;
  color: #0c0f0a;
  margin-bottom: 10px;
}

