/* PERFUME */

.perfume-content {
	padding-top:230px;
	font-size: 30px;
	color: #0c0f0a;
	margin-top: -200px;
	justify-content: center;
}

.perfume-section{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 0px;
}

.perfume-container {
  display: flex;
  max-width: 800px;
  margin-top: 20px;
  justify-content: center;
}

main {
  display: flex;
  justify-content: center;
}


.perfume {
  flex: 0 0 auto;
  width: 300px;
  margin: 10px;
  background-color: #3a6ea5;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.3s ease;
  border: 2px solid;
  border-color: black; 
  margin-bottom: 250px;
  
}

.perfume:hover {
  transform: rotate(5deg);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  
}



.perfume img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}



.perfume-info {
  padding: 20px;
}

.perfume-info h2 {
  margin-top: 0;
  color: #036666;
}

.perfume-info p {
  transition: max-height 0.3s ease;
  margin-bottom: 10px;
  font-size: 18px;
  color: #0c0f0a;
}

.perfume:hover .perfume-info p {
  font-size: 18px;
  color: #0c0f0a;
}

/*TOYS*/

.toys {
      background-color: #feeafa;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      width: 450px;
      transition: transform 0.3s ease;
	  flex: 0 0 calc(33.33% - 20px); 
      margin: 7px;
	  border: 2px solid;
	  border-color: black; 
	  margin-top: 20px;
    }
    
    .toys img {
      max-width: 100%;
	  height:250px;
      border-radius: 5px;
      margin-bottom: 10px;
    }
    
    .toys-info {
  padding: 20px;
}

.toys-info h2 {
  margin-top: 0;
  color: #036666;
}

.toys-info p {
  font-size: 18px;
  color: #0c0f0a;
  margin-bottom: 10px;
}

.toys-content {
	padding-top:230px;
	font-size: 30px;
	color: #0c0f0a;
	margin-top: -430px;
	justify-content: center;
}

.toys-section{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 0px;
}
    
    .toys span {
      color: #333;
      font-size: 1.1rem;
      font-weight: bold;
    }

    /* Shake animation */
    .toys:hover {
      animation: shake 0.5s ease;
    }

    @keyframes shake {
      0% { transform: translateX(0); }
      25% { transform: translateX(-5px); }
      50% { transform: translateX(5px); }
      75% { transform: translateX(-5px); }
      100% { transform: translateX(0); }
    }

